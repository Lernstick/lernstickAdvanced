BUILD_DIR="/home/ronny/lernstick/build/"
TMPFS="/mytmpfs/"
TMPFS_IMAGE="/mytmpfs/lernstick.img"
# given in GB
TMPFS_IMAGE_SIZE=50
TMPFS_IMAGE_MOUNT="/mytmpfs/lernstick/"

# these variables must be exported to make them available to
# subcommands
# Mirror used to build the image (preferably a local mirror)
export MIRROR_BUILD="http://localhost:9999/debian"

# Mirror used on the built system (preferably a mirror with good connectivity for most users)
export MIRROR_SYSTEM="http://deb.debian.org/debian"
export MIRROR_SECURITY_SYSTEM="http://security.debian.org/"
